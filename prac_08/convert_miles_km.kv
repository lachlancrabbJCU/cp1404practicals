BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            size_hint_x: 0.8
            id: input_km
            font_size: 50
            multiline: False
            text: ''
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                text: 'Up'
                font_size: 40
                on_press: app.handle_increment(+1)

            Button:
                text: 'Down'
                font_size: 40
                on_press: app.handle_increment(-1)
#    Button:
#        text: 'Convert miles to km'
#        font_size: 40
#        on_press: app.handle_calculate()
    Label:
        text: app.message
        font_size: 50
        color: (1, 1, 0, 1)